
<div class="show_post_container">
  <p style="color: green"><%= notice %></p>
   <div class="gallery_detail_container">
        <div class="gallery_img_container">
        <% if @company_association_file.company_img.attached? %>
        <%= image_tag @company_association_file.company_img %>
        <% end %>
        </div>
        <header class="gallery_description_container">
            <p><%= @company_association_file.description %></p>
        </header>
    </div>
  <div class ='show_bt_section'>
    <div class="link_div">
    <%= link_to t(".modify"), edit_company_association_file_path(@company_association_file) %>
    </div>
    <div class="button_div">
    <%= button_to t(".delete"), @company_association_file, method: :delete %>
    </div>
    <div class="back_link_container">
    <%= link_to t("company_association_files.new.back"), company_association_files_path %>
    </div>
  </div>
</div>
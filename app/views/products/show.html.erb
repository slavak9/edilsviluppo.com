<div class="show_post_container">
  <p style="color: green"><%= notice %></p>
   <div class="gallery_detail_container">
        <div class="gallery_img_container">
        <% if @product.product_img.attached? %>
        <%= image_tag @product.product_img %>
        <% end %>
        </div>
        <header class="gallery_description_container">
            <h3><%= @product.description %></h3>
        </header>
    </div>
  <div class ='show_bt_section'>
    <div class="link_div">
    <%= link_to t(".mod_post"), edit_product_path(@product) %> 
    </div>
    <div class="button_div">
    <%= button_to t(".del_post"), @product, method: :delete %>
    </div>
    <div class="back_link_container">
    <%= link_to t("products.new.back"), products_path %>
    </div>
  </div>
</div>
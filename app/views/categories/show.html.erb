
<div class="show_post_container">
  <p style="color: green"><%= notice %></p>
   <div class="gallery_detail_container">
        <div class="gallery_img_container">
        <% if @category.category_img.attached? %>
        <%= image_tag @category.category_img %>
        <% end %>
        </div>
        <header class="gallery_description_container">
            <h3 style="text-align:center;"><%= @category.title %></h3>
            <p><%= @category.description %></p>
        </header>
    </div>
  <div class ='show_bt_section'>
    <div class="link_div">
    <%= link_to t(".mod_cat"), edit_category_path(@category) %>
    </div>
    <div class="button_div">
    <%= button_to t(".del_cat"), @category, method: :delete %>
    </div>
    <div class="back_link_container">
    <%= link_to t("categories.new.back"), categories_path %>
    </div>
  </div>
</div>
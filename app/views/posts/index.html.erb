
<div class="show_category_container">


<h1><%= t(".title") %></h1>
<p style="color: green"><%= notice %></p>

<h2><%= link_to t(".add_bt"), new_post_path %></h2>


  <div class="grid_list_display">
    <header class="list_header_cont">
        <p class="p_description"><%= t("categories.index.description") %></p>
        <p class="p_picture"><%= t("categories.index.image") %></p>
        <p class="p_manage"><%= t("categories.index.manage_content") %></p>
    </header>
    <% @posts.each do |post| %>
    <div class="list_content_cont">
        <div class="i_description"><p><%= post.description%></p></div>
        <div class="i_picture"><%= image_tag post.post_img%></div>
        <div class="div_manage">
            <div class="i_show"><%= button_to t("categories.index.show_cont"), post, method: :get %></div>
            <div class="i_edit"><%= button_to t("categories.index.edit_cont"), edit_post_path(post), method: :get %></div>
            <div class="i_delete"><%= button_to t("categories.index.delete_cont"), post, method: :delete %></div>
        </div>
    </div>
    <% end %>
  </div>
</div>
<div class="nav-pagy-container">
    <% if Post.count > 0%>
    <p><%=if @pagy.page == @pagy.last then Post.count else @pagy.items*@pagy.page end%>/<%= Post.count %></p>
    <%end%>
    <%== pagy_nav(@pagy) if @pagy.pages > 1 %> 
</div>